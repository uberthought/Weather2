<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewHolder" type="com.example.weather.ui.main.ConditionsFragment.ConditionsAdapter.ViewHolder"/>
        <variable name="viewModel" type="com.example.weather.ui.main.ConditionsViewModel.Conditions"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/conditionsCard"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{viewHolder::onClick}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/centerGuideline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"/>

            <TextView
                android:id="@+id/title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@{context.getColor(viewModel.textColor)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="title"
                android:text="@{viewModel.title}"
                android:visibility="@{viewModel.titleVisibility}" />

            <LinearLayout
                android:id="@+id/temperatureLayout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:visibility="@{viewModel.temperatureVisibility}" >

                <TextView
                    android:id="@+id/temperatureLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="@{context.getColor(viewModel.textColor)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.temperatureLabel}"
                    tools:text="Hi" />

                <TextView
                    android:id="@+id/temperature"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="@{context.getColor(viewModel.textColor)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.temperature}"
                    tools:text="90F" />

            </LinearLayout>

            <TextView
                android:id="@+id/wind"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@{context.getColor(viewModel.textColor)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@id/temperatureLayout"
                android:text="@{viewModel.wind}"
                tools:text="wind"
                android:visibility="@{viewModel.windVisibility}" />

            <TextView
                android:id="@+id/windGust"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@{context.getColor(viewModel.textColor)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@+id/wind"
                android:text="@{viewModel.windGust}"
                android:visibility="@{viewModel.windGustVisibility}"
                tools:text="windGust" />

            <TextView
                android:id="@+id/dewPoint"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@{context.getColor(viewModel.textColor)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@+id/windGust"
                android:text="@{viewModel.dewPoint}"
                android:visibility="@{viewModel.dewPointVisibility}"
                tools:text="dewPoint" />

            <TextView
                android:id="@+id/relativeHumidity"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@{context.getColor(viewModel.textColor)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@+id/dewPoint"
                android:text="@{viewModel.relativeHumidity}"
                android:visibility="@{viewModel.relativeHumidityVisibility}"
                tools:text="relativeHumidity" />

            <TextView
                android:id="@+id/shortDescription"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@{context.getColor(viewModel.textColor)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@id/relativeHumidity"
                app:layout_constrainedWidth="true"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@{viewModel.shortDescription}"
                tools:text="shortDescription"
                android:visibility="@{viewModel.shortDescriptionVisibility}"/>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:layout_height="100dp"
                tools:layout_width="100dp"
                app:layout_constraintStart_toStartOf="@id/centerGuideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/icon"
                android:visibility="@{viewModel.iconVisibility}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
